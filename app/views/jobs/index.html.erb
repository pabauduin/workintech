<div class="ig">
  <div class="container">
  <div class="m-h1">
    <h1 class="h1-ig">Découverte métiers :</h1>
  </div>

  <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-12 col-md-6">
        <%= link_to job_path(job) do%>
          <div class="card-jobs m-3">
            <div class="content">
              <h2><%= job.name %></h2>
              <%= job.description %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
</div>

